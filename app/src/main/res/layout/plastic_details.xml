<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray">

    <ImageView
        android:id="@+id/plasticDetails"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plasticdetails"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/crossExit"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:background="@drawable/crossexit"
        app:layout_constraintBottom_toBottomOf="@+id/plasticDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/plasticDetails"
        app:layout_constraintVertical_bias="0.31"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>