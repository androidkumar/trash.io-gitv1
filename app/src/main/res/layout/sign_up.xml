<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroud">

    <TextView
        android:id="@+id/backSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/backsymbol"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/signUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backSymbol"
        android:layout_marginLeft="30dp"
        android:background="@drawable/signuptitlereal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/signUpPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/signupphone"
        android:layout_marginLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/signUpTitle"
        tools:ignore="MissingConstraints"/>

    <ImageView
        android:id="@+id/facebookBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/facebookbtn"
        android:layout_marginLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/signUpPhone"
        tools:ignore="MissingConstraints"/>

    <ImageView
        android:id="@+id/googleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/googlebtn"
        android:layout_marginLeft="190dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/signUpPhone"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/orSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/orsignup"
        android:layout_marginLeft="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/facebookBtn"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signUpUser"
        android:background="@color/white"
        android:hint="     username"
        android:layout_width="200dp"
        android:layout_height="19dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/orSignUp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signUpPass"
        android:layout_width="200dp"
        android:layout_height="19dp"
        android:background="@color/white"
        android:hint="     password"
       android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/signUpUser"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signUpRepass"
        android:layout_width="200dp"
        android:layout_height="19dp"
        android:background="@color/white"
        android:hint=" confirm password"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/signUpPass"
        tools:ignore="MissingConstraints"/>

    <EditText
        android:id="@+id/signUpEmail"
        android:layout_width="200dp"
        android:layout_height="19dp"
        android:background="@color/white"
        android:hint=" email address"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/signUpRepass"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signUpMobile"
        android:layout_width="200dp"
        android:layout_height="19dp"
        android:background="@color/white"
        android:hint=" mobile No."
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/signUpEmail"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/signUpMobile"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/termsAndCond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/termsandcond"
        android:layout_marginLeft="40dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/signUp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/loginText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logintext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.924"
        android:layout_below="@id/termsAndCond"

        android:layout_marginLeft="40dp"
        tools:ignore="MissingConstraints" />



</RelativeLayout>