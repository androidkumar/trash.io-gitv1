<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroud">


    <TextView
        android:id="@+id/wastageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/wastagetitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/weeklyTrash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wastageTitle"
        android:layout_marginTop="24dp"
        android:background="@drawable/weeklytrash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wastageTitle"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/usageProgression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wastageTitle"
        android:layout_marginTop="24dp"
        android:background="@drawable/usageprogression"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/weeklyTrash"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/backSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/backsymbol"
        app:layout_constraintEnd_toStartOf="@+id/wastageTitle"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>